@model List<Item>
@{
    Layout = "_MainLayout";
}
@if (Model.Count == 0)
{
    <p>Кошик порожній</p>
}
else
{
    <table id="cart-res"  class="table">
        <tr>
            <th>Книга</th>
            <th>Кількість</th>
            <th>Ціна</th>
            <th>Сума</th>
           
        </tr>
        @foreach (var item in Model)
        {
            <tr>
             
                <td>
                    <img  alt="product" src="@item.Product.Image" width="60" /> <br/>
                    @item.Product.Name
                </td>
                <td><button onclick="Decrease(@item.Product.Id)" >-</button> <span id="number">@item.Quantity</span>
                    <button onclick="Increase(@item.Product.Id)">+</button></td>
                <td>@item.Product.Price</td>
                <td>@(item.Product.Price * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td>Итого</td>
            <td></td>
            <td></td>
            <td>
                @ViewBag.total
            </td>
        </tr>
    </table> 
}

<br>
@if (Model.Count > 0)
{
    <a class=" btn btn-success" asp-controller="Cart" asp-action="Order">Оформити замовлення</a>
}