@model IEnumerable<Product>
@{
    ViewBag.Title = "Головна";

}

<div class="eco--pd--100" id="books">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="eco--sec--title eco--small text-center">
                <span>Усі</span>
                <h1>Книги</h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="text-center">
                    @if (!User.Identity.IsAuthenticated)
                     {
                        <h2>Для замовлення необхідно увійти до особистого кабінету!</h2><br />
                        <a class="eco--btn" asp-controller="Account" asp-action="Login">Увійти</a>}
                    @if (User.IsInRole("admin"))
                     {
                        <br /><a class="eco--btn" asp-controller="Product" asp-action="Add">Додати книгу</a>}
                </div>
               @foreach (var p in @Model)
                {
                    <div class="col-sm-3 text-center">
                        <a asp-action="Detail" asp-route-id="@p.Id">
                            <h3>@p.Name</h3>
                            <img class="" src="@p.Image" alt="some img">
                            <h4>@p.ShortDesc</h4>
                            <h4>@p.Price UAH</h4>
                            <a asp-action="Detail" asp-route-id="@p.Id" class="eco--btn">Подивитися</a>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
