@model eShop.ViewModels.ProductViewModel

<div class="container border p-4">
    <form asp-action="Add" asp-controller="Product" method="post" enctype="multipart/form-data">
<div class="form-group row">
    <div class="col-4">
        <label for="">Название</label>
    </div>
    <div class="col-6">
        <input asp-for="@Model.Name" type="text" class="form-control">
        <span asp-validation-for="Name"></span>

    </div>
</div>
<div class="form-group row">
    <div class="col-4">
        <label for="">Цена</label>
    </div>
    <div class="col-6">
        <input asp-for="@Model.Price" type="text"  class="form-control required">
        <span asp-validation-for="Price"></span>
    </div>
</div>

<div class="form-group row">
    <div class="col-4">
        <label for="">Изображение</label>
    </div>
    <div class="col-6">
        <input asp-for="@Model.File" type="file">
      
    </div>
</div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-primary form-control">Сохранить</button>
            </div>

        </div>
    </form>
</div>
@section Scripts{
    @{
        await  Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}