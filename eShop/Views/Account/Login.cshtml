@model eShop.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Вхід";
    Layout = "_LoginLayout";
}

<div class="row">
    <div class="col-md-5 eco--home--height--1">
        <div class="eco--home--content--3">
            <div class="eco--sec--title--white eco--small">
                <span>Lorem ipsum dolor sit amet</span>
                <h1>Lorem ipsum<br>dolor sit amet.</h1>
            </div>
            <div class="eco--content">
                <p>Don't have an account? Not a problem! Register in 2 minutes!</p>
                <div class="eco--btn--wrap">
                    <a class="eco--btn eco--bordered--white" asp-controller="Account" asp-action="Registration">Registration</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-md-offset-1 eco--home--height--1">
        <form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="eoc--home--form ">
                <h3>Login</h3>
                <div class="form-group">
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}